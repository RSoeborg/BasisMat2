<Window x:Class="BasisMat2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BasisMat2"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="650" 
        Width="1000" 
        WindowStyle="None" 
        WindowStartupLocation="CenterScreen">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0"
                      GlassFrameThickness="10"
                      NonClientFrameEdges="None"
                      ResizeBorderThickness="3"/>
    </WindowChrome.WindowChrome>
    <Grid>
        <Border>
            <Border.Background>
                <SolidColorBrush Color="#333333"/>
            </Border.Background>
        </Border>
        <StackPanel>
            <Border Name="toolbar" 
                    Background="#2D2D30" 
                    Width="auto" 
                    Height="32" 
                    VerticalAlignment="Top" MouseDown="toolbar_MouseDown">
                <Border.Effect>
                    <DropShadowEffect 
                        BlurRadius="10" 
                        Color="#3E3E42"
                        ShadowDepth="0"/>
                </Border.Effect>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="minimizeButton"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Right"
                            Height="32" Width="55"
                            BorderBrush="{x:Null}"
                            Style="{StaticResource MaxMinButton}" Click="minimizeButton_Click">
                            <materialDesign:PackIcon Kind="WindowMinimize"
                                                     Height="16"
                                                     Width="16"
                                                     VerticalAlignment="Center"
                                                     HorizontalAlignment="Center"/>
                    </Button>
                    <Button x:Name="maximizeButton"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Right"
                            Height="32" Width="55"
                            BorderBrush="{x:Null}" 
                            Style="{StaticResource MaxMinButton}"
                            Click="maximizeButton_Click">
                            <materialDesign:PackIcon Kind="WindowMaximize"
                                                     Height="16"
                                                     Width="16"
                                                     VerticalAlignment="Center"
                                                     HorizontalAlignment="Center"/>
                    </Button>
                    <Button x:Name="closeButton"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Right"
                            Height="32" Width="55"
                            BorderBrush="{x:Null}"
                            Style="{StaticResource CloseButton}"
                            Click="closeButton_Click">
                            <materialDesign:PackIcon Kind="WindowClose"
                                                     Height="16"
                                                     Width="16"
                                                     VerticalAlignment="Center"
                                                     HorizontalAlignment="Center"/>
                    </Button>
                </StackPanel>
            </Border>
